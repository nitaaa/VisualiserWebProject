
@{
    ViewBag.Title = "AddNewTest";
}

<h2>Add New Test</h2>

@using (Html.BeginForm())
{
    <div id="uploadFilesForm" class="form-horizontal">
        @* TODO: Test Question Format *@
        <h4>Upload the test questions with answer key:</h4>
        <div class="form-group">
            <div class="col-md-10">
                <input type="file" id="testQuestions" runat="server" ToolTip="TBD files only." />
            </div>
        </div>

        @* Other Fields: moduleID, testTitle, testType, testDate  *@
        @* Determined in methods: totalAttempts, uniqueAttempts, averageMark, uploadDate, assessor *@

        <h4>Upload the test report from Moodle:</h4>
        <div class="form-group">
            <div class="col-md-10">
                <input type="file" id="testReport" runat="server" ToolTip="Excel (.xsl/.xsls) files only." />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@model IEnumerable<VisualiserWebProject.Models.TestQuestion>

@{
    ViewBag.Title = "Index";
}

<h2>All Test Questions</h2>

<div id="searchSort">

</div>

<table class="table, _background">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Test.Module.moduleCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Test.testTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question.qText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.correctSelected)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.qD1Selected)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.qD2Selected)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.qD3Selected)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.difficultyIndex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.discriminationIndex)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Test.Module.moduleCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Test.testTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Question.qText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.correctSelected)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.qD1Selected)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.qD2Selected)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.qD3Selected)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.difficultyIndex)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.discriminationIndex)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { Tid = item.TestID, Qid = item.QuestionID }) |*@
            @Html.ActionLink("Visualise", "Details", new { Tid = item.TestID, Qid = item.QuestionID }) 
            @*@Html.ActionLink("Delete", "Delete", new { Tid = item.TestID, Qid = item.QuestionID })*@
        </td>
    </tr>
}

</table>

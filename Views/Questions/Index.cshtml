@model IEnumerable<VisualiserWebProject.Models.Question>

@{
    ViewBag.Title = "Index";
}

<h2>All Questions</h2>

<div id="searchSort">
    @using (Html.BeginForm())
    {
        <p>
            Find by module code or name: @Html.TextBox("SearchString")
            <input type="submit" value="Search" />
        </p>
    }

</div>

<table class="table, _background">
    <tr>
        <th>
            @Html.ActionLink("Questions: ", "Index", new { sortOrder = ViewBag.NameSortParam })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.qCorrectAnswer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.qDistractor1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.qDistractor2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.qDistractor3)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.qText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.qCorrectAnswer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.qDistractor1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.qDistractor2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.qDistractor3)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.QuestionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.QuestionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.QuestionID })
        </td>
    </tr>
}

</table>

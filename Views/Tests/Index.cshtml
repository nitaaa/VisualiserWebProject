@model IEnumerable<VisualiserWebProject.Models.Test>

@{
    ViewBag.Title = "Index";
}

<h2>All Tests</h2>

<div id="searchSort">
    @using (Html.BeginForm())
    {
        <p>
            Find by module code or test name: @Html.TextBox("SearchString")
            <input type="submit" value="Search" />
        </p>
    }

</div>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Module Code: ", "Index", new { sortOrder = ViewBag.CodeSortParm })
        </th>
        <th>
            @Html.ActionLink("Test Title: ", "Index", new { sortOrder = ViewBag.TitleSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.testType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.totalAttempts)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.uniqueAttempts)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.averageMark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.testDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.uploadDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Module.moduleCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.testTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.testType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.totalAttempts)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.uniqueAttempts)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.averageMark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.testDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.uploadDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.userFirstName) @Html.DisplayFor(modelItem => item.User.userLastName)
        </td>
        <td>
            @Html.ActionLink("Dashboard", "TestDashboard", new { id = item.TestID }) |
            @Html.ActionLink("Details", "Index", "TestQuestions", new { id = item.TestID}, null) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TestID })
        </td>
    </tr>
}

</table>
